# Environment Variables Example for WebDi√°rio Event Hub API
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real values!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=jdbc:mysql://localhost:3306/webdiario_event_hub?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DATABASE_USERNAME=root
DATABASE_PASSWORD=root
DB_USERNAME=root
DB_PASSWORD=root

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8082
SERVER_CONTEXT_PATH=/api/event-hub

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here

# AWS SQS Configuration
AWS_SQS_ENDPOINT=https://sqs.us-east-1.amazonaws.com
AWS_SQS_USER_EVENTS_QUEUE=webdiario-user-events
AWS_SQS_SYSTEM_EVENTS_QUEUE=webdiario-system-events
AWS_SQS_NOTIFICATION_EVENTS_QUEUE=webdiario-notification-events

# AWS SNS Configuration
AWS_SNS_ENDPOINT=https://sns.us-east-1.amazonaws.com
AWS_SNS_USER_NOTIFICATIONS_TOPIC=webdiario-user-notifications
AWS_SNS_SYSTEM_ALERTS_TOPIC=webdiario-system-alerts
AWS_SNS_AUDIT_LOGS_TOPIC=webdiario-audit-logs

# =============================================================================
# EVENT HUB CONFIGURATION
# =============================================================================
EVENT_HUB_BATCH_SIZE=100
EVENT_HUB_RETRY_ATTEMPTS=3
EVENT_HUB_RETRY_DELAY=1000
EVENT_HUB_DEAD_LETTER_QUEUE=webdiario-dlq
EVENT_HUB_EVENT_RETENTION_DAYS=90
EVENT_HUB_MAX_EVENT_SIZE=1048576

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_AWS=INFO
LOGGING_LEVEL_AWS_SDK=WARN

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=https://app.webdiario.com,https://admin.webdiario.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_REQUIRE_SSL=true
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_LOGIN_ATTEMPTS=3
SECURITY_PASSWORD_EXPIRATION_DAYS=90
