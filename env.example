# Environment Variables Example for WebDi√°rio Event Hub API
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real values!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=jdbc:mysql://localhost:3306/webdiario_event_hub?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DATABASE_USERNAME=root
DATABASE_PASSWORD=root
DB_USERNAME=root
DB_PASSWORD=root

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8082
SERVER_CONTEXT_PATH=/api/event-hub

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/
RABBITMQ_CONNECTION_TIMEOUT=15000

# RabbitMQ Exchanges
RABBITMQ_USER_EVENTS_EXCHANGE=webdiario.user.events
RABBITMQ_SYSTEM_EVENTS_EXCHANGE=webdiario.system.events
RABBITMQ_NOTIFICATION_EVENTS_EXCHANGE=webdiario.notification.events

# RabbitMQ Queues
RABBITMQ_USER_EVENTS_QUEUE=webdiario.user.events.queue
RABBITMQ_SYSTEM_EVENTS_QUEUE=webdiario.system.events.queue
RABBITMQ_NOTIFICATION_EVENTS_QUEUE=webdiario.notification.events.queue
RABBITMQ_DEAD_LETTER_QUEUE=webdiario.dlq

# RabbitMQ Routing Keys
RABBITMQ_USER_CREATED_ROUTING_KEY=user.created
RABBITMQ_USER_UPDATED_ROUTING_KEY=user.updated
RABBITMQ_USER_DELETED_ROUTING_KEY=user.deleted
RABBITMQ_SYSTEM_ALERT_ROUTING_KEY=system.alert
RABBITMQ_NOTIFICATION_SENT_ROUTING_KEY=notification.sent

# =============================================================================
# EVENT HUB CONFIGURATION
# =============================================================================
EVENT_HUB_BATCH_SIZE=100
EVENT_HUB_RETRY_ATTEMPTS=3
EVENT_HUB_RETRY_DELAY=1000
EVENT_HUB_DEAD_LETTER_QUEUE=webdiario.dlq
EVENT_HUB_EVENT_RETENTION_DAYS=90
EVENT_HUB_MAX_EVENT_SIZE=1048576

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_RABBITMQ=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=https://app.webdiario.com,https://admin.webdiario.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_REQUIRE_SSL=true
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_LOGIN_ATTEMPTS=3
SECURITY_PASSWORD_EXPIRATION_DAYS=90
